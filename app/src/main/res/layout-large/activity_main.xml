<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#808080"
    tools:context="app.MainActivity">

    <TextView
        android:id="@+id/errorTitle"
        android:layout_width="839dp"
        android:layout_height="188dp"
        android:layout_marginBottom="216dp"
        android:text="No es posible ingresar a la LimeApp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/tips"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tips"
        android:layout_width="887dp"
        android:layout_height="988dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="5dp"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/retryButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.446"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/retryButton"
        android:layout_width="245dp"
        android:layout_height="83dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="644dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/button_bg"
        android:onClick="retry"
        android:text="Reintentar"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.449"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.784" />

    <TextView
        android:id="@+id/LibreMeshText"
        android:layout_width="230dp"
        android:layout_height="83dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="324dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="324dp"
        android:text="LibreMesh"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>